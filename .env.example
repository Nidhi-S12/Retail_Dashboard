# Environment Variables Template for Azure Integration
# Copy this file to .env and fill in your Azure credentials

# Azure Storage Account
AZURE_STORAGE_CONNECTION_STRING=""

# Azure AI Language Service (Text Analytics)
AZURE_AI_LANGUAGE_KEY=""
AZURE_AI_LANGUAGE_ENDPOINT=""

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=""
AZURE_OPENAI_ENDPOINT=""
AZURE_OPENAI_DEPLOYMENT_NAME=""

# Azure Machine Learning Workspace
AZURE_SUBSCRIPTION_ID=""
AZURE_RESOURCE_GROUP=""
AZURE_WORKSPACE_NAME=""

# Azure Functions Configuration (for serverless processing)
CONTAINER_NAME="project-data"
OUTPUT_CONTAINER="processed-data"

# Local Development Settings
DEBUG=True
LOCAL_FALLBACK=True

# Example values (DO NOT USE IN PRODUCTION):
# AZURE_STORAGE_CONNECTION_STRING="DefaultEndpointsProtocol=https;AccountName=your-storage-account;AccountKey=your-key;EndpointSuffix=core.windows.net"
# AZURE_AI_LANGUAGE_KEY="your-language-service-key"
# AZURE_AI_LANGUAGE_ENDPOINT="https://your-language-service.cognitiveservices.azure.com/"
# AZURE_OPENAI_API_KEY="your-openai-key"
# AZURE_OPENAI_ENDPOINT="https://your-openai-service.openai.azure.com/"
# AZURE_OPENAI_DEPLOYMENT_NAME="your-deployment-name"
# AZURE_SUBSCRIPTION_ID="your-subscription-id"
# AZURE_RESOURCE_GROUP="your-resource-group"
# AZURE_WORKSPACE_NAME="your-ml-workspace"
